<h1>Article</h1>
<h2>Article By - <%= @user.email %> </h2>
<p>
<strong>Title:</strong><br>
<%= @article.title %>
</p>
<p>
<strong>Body:</strong><br>
<%= @article.body %>
</p>

<ul>
	<li><%= link_to "Edit", edit_user_article_path(@user, @article) %></li>
	<li><%= button_to "Destroy", user_article_path(@user, @article), 
		method: :delete,
			form: {
				data: { turbo_confirm: "Are you sure?" }
			} %>
	</li>
</ul>
