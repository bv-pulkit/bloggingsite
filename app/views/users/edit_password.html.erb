<h1>Edit Password</h1>
<%= form_with model: Current.user, url:password_path do |form| %>
  <div>
    <%= form.label :password %><br>
    <%= form.text_field :password %>
  </div>
  <div>
    <%= form.label :password_confirmation %><br>
    <%= form.text_field :password_confirmation %>
  </div>
  <div>
    <%= form.submit 'Update' %>
  </div>
<% end %>
